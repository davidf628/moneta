<%- include('header') %>

  <div class="container-fluid">

  <h1>Budget Items</h1>

  <% if (budget_items.length === 0) { %>
    <p>No budget items found.</p>
  <% } else { %>
    <table class="table table-striped table-hover table-sm table-bordered">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th style="text-align:center">Budget</th>
          <th style="text-align:center">Actions</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
      <% budget_items.forEach(budget_item => { %>
        <% if (budget_item.orderbyte != -1) { %>
            <tr>

                <% let name = `cb_budgetitem_${budget_item.id}` %>
                <td><input type="checkbox" name="<%= name %>"></td>
                <td><%= budget_item.name %></td>
                <td style="text-align: right"><%= budget_item.name == "" ? "" : budget_item.amount.toLocaleString('us-US', { style: 'currency', currency: 'USD' }) %></td>
                <td style="text-align: center">
   
                    <!-- Move Up -->
                    <button class="btn btn-sm btn-outline-secondary moveup-btn" title="Move up" dbid="<%=budget_item.id%>">
                    <i class="bi bi-caret-up"></i>
                    </button>

                    <!-- Move Down -->
                    <button class="btn btn-sm btn-outline-secondary movedown-btn" title="Move down" dbid="<%=budget_item.id%>">
                    <i class="bi bi-caret-down"></i>
                    </button>

                    <!-- Add Above -->
                    <button class="btn btn-sm btn-outline-primary" title="Insert above">
                        <i class="bi bi-chevron-double-up"></i>
                    </button>

                    <!-- Add Below -->
                    <button class="btn btn-sm btn-outline-primary insert-below-btn" title="Insert below" dbid="<%=budget_item.id%>">
                        <i class="bi bi-chevron-double-down"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger delete-btn" title="Delete" dbid="<%=budget_item.id%>">
                        <i class="bi bi-x-lg"></i>
                    </button>

                </td>

            </tr>
        <% } %>
        <% }) %>
      </tbody>
    </table>
  <% } %>

<form action="/new-budget-item">
    <button type="submit" class="btn btn-primary float-end">Add Budget Item</button>
</form>
</div>

<script>

    function insertRowAfter(row) {
        const table = row.closest("table"); // get parent table
        const newRow = table.insertRow(row.rowIndex + 1);

        // Copy structure (number of cells)
        for (let i = 0; i < row.cells.length; i++) {
            const newCell = newRow.insertCell(i);
            newCell.textContent = ''; 
        }

        return newRow;
    }

    // Event listener for delete buttons
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', async (e) => {
                const row = e.target.closest('tr');
                const id = btn.getAttribute('dbid');

                if (confirm('Are you sure you want to delete this row?')) {
                    const res = await fetch(`/delete/${id}`, { method: 'DELETE' });
                    if (res.ok) {
                        row.remove(); // Remove row from the DOM
                    } else {
                        alert('Error deleting row');
                    }
                }
            });
        });
    });

    // Event listener for Move Up buttons
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.moveup-btn').forEach(btn => {
            btn.addEventListener('click', async (e) => {
                const row = e.target.closest('tr');
                const id = btn.getAttribute('dbid');
                const payload = {
                    id: id,
                    table: 'budgetitems'
                }
                const res = await fetch(`/moveup`, { 
                    method: 'POST', 
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });
                if (res.ok) {
                    const prevRow = row.previousElementSibling; // find the one above
                    if (prevRow) {
                        row.parentNode.insertBefore(row, prevRow); // insert this row before the one above
                    }
                } else {
                    alert('Error moving row');
                }
            });
        });
    });

    // Event listener for Move Down buttons
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.movedown-btn').forEach(btn => {
            btn.addEventListener('click', async (e) => {
                const row = e.target.closest('tr');
                const payload = {
                    id: btn.getAttribute('dbid'),
                    table: 'budgetitems'
                }
                const res = await fetch(`/movedown`, { 
                    method: 'POST', 
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });
                if (res.ok) {
                    const nextRow = row.nextElementSibling;
                    if (nextRow) {
                        row.parentNode.insertBefore(nextRow, row);
                    }
                } else {
                    alert('Error moving row');
                }
            });
        });
    });

    // Event listener for Insert Below buttons
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.insert-below-btn').forEach(btn => {
            btn.addEventListener('click', async (e) => {
                const row = e.target.closest('tr');
                const payload = {
                    id: btn.getAttribute('dbid'),
                    table: 'budgetitems'
                }
                const res = await fetch(`/insertbelow`, { 
                    method: 'POST', 
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });
                if (res.ok) {
                    window.location.reload();//fetch("/");
                    //insertRowAfter(row);
                } else {
                    alert('Error inserting row');
                }
            });
        });
    });

</script>

<%- include('footer') %>