<!DOCTYPE html>
<html>
<head>
  <title>Budget Items</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="container-fluid">
  <h1>Budget Items</h1>

  <% if (budget_items.length === 0) { %>
    <p>No budget items found.</p>
  <% } else { %>
    <table class="table table-striped table-hover table-sm table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Budget</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
      <% budget_items.forEach(budget_item => { %>
        <tr>
          <td><%= budget_item.name %></td>
          <td><%= budget_item.amount %></td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  <% } %>

<form action="/new-budget-item">
    <button type="submit" class="btn btn-primary float-end">Add Budget Item</button>
</form> 

</html>