<!DOCTYPE html>
<html>
<head>
    <title>Budget Items</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<style>
  body {
    padding-top: 70px; /* adjust if your navbar is taller */
  }
</style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow">
        <div class="container-fluid">
        
            <!-- Left side: name of program -->
            <a class="navbar-brand fw-bold" href="#">Moneta</a>

            <!-- Right side: username and navigation links -->
            <div class="d-flex align-items-center gap-3">

                <!-- Username Display -->
                <span class="text-light">
                    <i class="bi bi-person-circle"></i> Logged in as <strong><%= prefs.user %></strong>
                </span>

                <!-- Account Selector -->
                <div class="dropdown">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"><%= current_account %></button>
                    <ul class="dropdown-menu">
                        <% accounts.forEach((account) => { %>
                            <li><a class="dropdown-item" href="#"><%= account %></a></li>
                        <% }); %>
                    </ul>
                </div> 
            
                <!-- Month Selector -->
                <div class="dropdown">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"><%= prefs.current_month %> </button>
                    <ul class="dropdown-menu">
                        <% months.forEach((month) => { %>
                            <li><a class="dropdown-item" href="#"><%= month %></a></li>
                        <% }); %>
                    </ul>
                </div> 

                <!-- Year Selector -->
                <div class="dropdown">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"><%= prefs.current_year %> </button>
                    <ul class="dropdown-menu">
                        <% years.forEach((year) => { %>
                            <li><a class="dropdown-item" href="#"><%= year %></a></li>
                        <% }); %>
                    </ul>
                </div> 
                
            </div>
        </div>
    </nav>